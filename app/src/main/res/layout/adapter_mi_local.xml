<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdMiLocal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgLocalMiLocal"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNombreMiLocal"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDireccionMiLocal"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="70dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/btnEliminarMiLocal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_btn_cancel" />

    <ImageButton
        android:id="@+id/btnEditarMiLocal"
        android:layout_width="80dp"
        android:layout_height="61dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.cardview.widget.CardView>