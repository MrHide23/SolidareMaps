<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#EDE4E4"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:contentPadding="5dp">

    <TextView
        android:id="@+id/txtAppDonativoAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtIdDonativosAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/imgbtnCopiarIDDonativosAdapter"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#EDE4E4"
            app:srcCompat="@drawable/ic_copiar" />
    </LinearLayout>
</androidx.cardview.widget.CardView>